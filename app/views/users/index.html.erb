<div class="alert alert-danger">
  <h1>Listing users</h1>
</div>
<hr>
<table class="table table-striped">
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-link" %></td>
        <% if user.admin? %>
            <td></td>
            <td></td>
        <% else user.admin? %>
            <td><%= link_to 'Delete', user, method: :delete, data: {confirm: 'Are you sure to delete the user "'+ user.username+'" ?'}, class: "btn btn-link" %></td>
        <% end %>
      </tr>
  <% end %>
</table>

<hr>

<%= link_to 'New User', new_user_path, class: "btn btn-info" %>
