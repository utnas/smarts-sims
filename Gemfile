source 'https://rubygems.org'

gem 'rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'uglifier'
  gem 'bootstrap'
  gem 'twitter-bootstrap-rails'
  gem 'jquery-rails'
  gem 'jquery-ui-rails'
  gem 'bootstrap-sass'
end

# To use pagination
gem 'will_paginate'
gem 'jslint_on_rails'
gem 'twitter'
gem 'colored'
gem 'sorcery'
gem 'heroku'
gem 'protected_attributes'
gem 'rails-observers'
gem 'actionpack-page_caching'
gem 'actionpack-action_caching'
gem 'puma'

group :production do
  gem 'pg'
end

group :development, :test do
  gem 'sqlite3'
  gem 'capybara'
  gem 'capybara-webkit'
  gem 'database_cleaner'
  gem 'rspec-rails'
  gem 'qunit-rails'
  gem 'headless'
  gem 'spork-rails'
  gem 'spork-testunit'
  gem 'meta_request'
end
